# Procurement Platform Environment Variables Sample
# Copy this file to .env and fill in the values for local development
# For production, these values are managed via Doppler

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/procurement

# MongoDB credentials (for production)
MONGODB_USERNAME=procurement_user
MONGODB_PASSWORD=your_secure_password_here
MONGODB_DATABASE=procurement
MONGODB_AUTH_SOURCE=admin

# ===================================================================
# REDIS CONFIGURATION
# ===================================================================
# Redis connection URL
REDIS_URL=redis://localhost:6379

# Redis credentials (for production)
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===================================================================
# AUTHENTICATION (KEYCLOAK)
# ===================================================================
# Keycloak configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=procurement
KEYCLOAK_CLIENT_ID=procurement-app
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret_here
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# ===================================================================
# JWT CONFIGURATION
# ===================================================================
# JWT signing keys
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===================================================================
# SESSION CONFIGURATION
# ===================================================================
# Session encryption
SESSION_SECRET=your_session_secret_key_here_min_32_chars
SESSION_NAME=procurement_session
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# ===================================================================
# EXTERNAL APIS
# ===================================================================
# SerpAPI configuration
SERPAPI_KEY=your_serpapi_key_here
SERPAPI_TIMEOUT=30000
SERPAPI_RETRY_ATTEMPTS=3
SERPAPI_RETRY_DELAY=1000

# ===================================================================
# WEBHOOK CONFIGURATION
# ===================================================================
# Webhook security
WEBHOOK_HMAC_SECRET=your_webhook_hmac_secret_here_min_32_chars
WEBHOOK_TIMEOUT=10000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5000

# ===================================================================
# APPLICATION CONFIGURATION
# ===================================================================
# Node environment
NODE_ENV=development

# Application ports
FRONTEND_PORT=3000
BACKEND_PORT=8080
WORKER_PORT=8081

# API configuration
API_BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# ===================================================================
# MONITORING & LOGGING
# ===================================================================
# Log level
LOG_LEVEL=debug
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# ===================================================================
# DOPPLER CONFIGURATION (for CI/CD)
# ===================================================================
# These are only used in CI/CD environments
# DOPPLER_TOKEN is injected by CI/CD pipeline
# DOPPLER_PROJECT=procurement
# DOPPLER_CONFIG=dev|stg|prd

# ===================================================================
# NOTES
# ===================================================================
# 1. Never commit the actual .env file to version control
# 2. All production secrets are managed via Doppler
# 3. Use strong, unique passwords for all services
# 4. Rotate secrets regularly
# 5. Different environments should have different secret values