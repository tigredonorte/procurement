# Environment Variables Sample
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=development

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0

# Frontend Configuration
VITE_API_URL=http://localhost:8080
VITE_KEYCLOAK_URL=http://localhost:8180
VITE_KEYCLOAK_REALM=procurement
VITE_KEYCLOAK_CLIENT_ID=procurement-frontend

# Database Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/procurement?authSource=admin
MONGODB_DB_NAME=procurement

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8180
KEYCLOAK_REALM=procurement
KEYCLOAK_CLIENT_ID=procurement-backend
KEYCLOAK_CLIENT_SECRET=backend-secret
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# JWT Configuration
JWT_SECRET=development-jwt-secret-change-in-production
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# Worker Configuration
WORKER_CONCURRENCY=5
MAX_RETRIES=3
RETRY_DELAY=5000
JOB_TIMEOUT=300000

# External API Keys (obtain from providers)
SERPAPI_KEY=your-serpapi-key-here

# Email Configuration (for development, use Mailhog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@procurement.local

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=development-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Feature Flags
ENABLE_WEBHOOK_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_RATE_LIMITING=false
ENABLE_API_DOCUMENTATION=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Tools
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_SWAGGER_UI=true